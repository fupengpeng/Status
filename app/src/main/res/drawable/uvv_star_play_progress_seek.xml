<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="-90"
                android:centerColor="#A0A3A4"
                android:centerY="0.75"
                android:endColor="#A0A3A4"
                android:startColor="#A0A3A4" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="-90"
                    android:centerColor="#D0D1D2"
                    android:centerY="0.75"
                    android:endColor="#D0D1D2"
                    android:startColor="#D0D1D2" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="-90"
                    android:centerColor="#188ED2"
                    android:centerY="0.75"
                    android:endColor="#188ED2"
                    android:startColor="#188ED2" />
            </shape>
        </clip>
    </item>

</layer-list>