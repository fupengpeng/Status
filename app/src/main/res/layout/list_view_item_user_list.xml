<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_lv_item_select_worker_content"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:weightSum="1">
            <CheckBox
                android:id="@+id/cb_lv_item_select_worker_is"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                style="@style/circlecheckbox"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:layout_height="match_parent"
                android:layout_weight="0.07" />
        </LinearLayout>

        <com.fpp.status.customview.CircleImageView
            android:id="@+id/iv_lv_item_select_worker_user_image"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:src="@drawable/ic_account_circle_black_24dp" />

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center|left"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="0.5">
                <TextView
                    android:id="@+id/tv_lv_item_select_worker_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="虞姬"
                    android:textColor="#000000"
                    android:textSize="@dimen/order_subheading_text_size" />
                <ImageView
                    android:id="@+id/iv_lv_item_select_worker_user_gender"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:textColor="#000000"
                    android:textSize="@dimen/order_subheading_text_size" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_lv_item_select_worker_user_level"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="0.5"
                android:gravity="center|left"
                android:textSize="@dimen/order_main_body_little_text_size"
                android:text="13605372201" />

        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/dp_5"
            android:gravity="center"
            android:layout_width="@dimen/dp_55"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_lv_item_select_worker_user_manager"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="店主"
                android:textSize="@dimen/order_main_body_little_text_size" />
            <TextView
                android:id="@+id/tv_lv_item_select_worker_user_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="@dimen/order_main_body_little_text_size"
                android:text="100号" />



        </LinearLayout>
    </LinearLayout>

</LinearLayout>