<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    >

    <!--主页面-->
    <RelativeLayout
        android:id="@+id/rl_atvt_main_content"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <!--下层-标题栏    克里姆林宫-->
        <LinearLayout
            android:id="@+id/ll_atvt_main_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/main_left_top_page" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="克里姆林宫"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/main_right_top_qr_code" />
        </LinearLayout>
        <!--下层-图片栏-->
        <LinearLayout
            android:id="@+id/ll_atvt_main_iv"
            android:background="@drawable/main_bg"
            android:layout_marginTop="@dimen/dp_45"
            android:layout_marginBottom="-20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="370dp">

            <RelativeLayout
                android:id="@+id/rl_atvt_main_untreated_order"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_atvt_main_liu"
                    android:src="@drawable/main_untreated_order_bg_one"
                    android:layout_width="@dimen/dp_220"
                    android:layout_height="@dimen/dp_220"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="@dimen/dp_220"
                    android:layout_height="@dimen/dp_220"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true">
                    <LinearLayout
                        android:layout_weight="0.5"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0">
                        <TextView
                            android:textColor="@color/white"
                            android:text="8"
                            android:layout_marginRight="@dimen/dp_5"
                            android:textSize="@dimen/dp_40"
                            android:gravity="right|bottom"
                            android:layout_weight="0.55"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textColor="@color/white"
                            android:text="个"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:gravity="left|bottom"
                            android:layout_weight="0.45"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                    <TextView
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/dp_5"
                        android:gravity="center|top"
                        android:text="未处理订单"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <!--下层-空白 -->
        <LinearLayout
            android:id="@+id/ll_atvt_main_black"
            android:layout_marginTop="370dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2000"
            android:background="#ffaaff"
            android:orientation="vertical">

        </LinearLayout>

        <!--上层    -->
        <LinearLayout
            android:id="@+id/ll_atvt_main_superstratum"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_330"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2000">

        </LinearLayout>




    </RelativeLayout>

</LinearLayout>
