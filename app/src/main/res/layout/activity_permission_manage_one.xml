<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_atvt_permission_manage"
        android:paddingTop="@dimen/dp_25"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:layout_gravity="center"
        android:src="@drawable/nvshengtouxiang" />

    <Button
        android:id="@+id/btn_atvt_permission_manage_calendar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="点击获取日历权限" />
    <Button
        android:id="@+id/btn_atvt_permission_manage_camera"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="点击获取相机权限" />
    <Button
        android:id="@+id/btn_atvt_permission_manage_contacts"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="点击获取通讯录联系人权限" />
    <Button
        android:id="@+id/btn_atvt_permission_manage_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="点击获取位置权限" />
    <Button
        android:id="@+id/btn_atvt_permission_manage_microphone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="点击获取麦克风权限" />
    <Button
        android:id="@+id/btn_atvt_permission_manage_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="点击获取电话权限" />
    <Button
        android:id="@+id/btn_atvt_permission_manage_sensors"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="点击手机传感器权限" />
    <Button
        android:id="@+id/btn_atvt_permission_manage_sms"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="点击短信相关权限" />
    <Button
        android:id="@+id/btn_atvt_permission_manage_storage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="点击存储相关权限" />



</LinearLayout>