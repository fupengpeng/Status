<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90">
        <CheckBox
            android:id="@+id/cb_item_fragment_shopping_cart_commodity_list_select"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_40"
            style="@style/circlecheckbox"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_height="match_parent"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/iv_item_fragment_shopping_cart_commodity_list_pic"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/nvshengtouxiang" />

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_item_fragment_shopping_cart_commodity_list_name"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_height="0dp"
                >

                <TextView
                    android:id="@+id/tv_item_fragment_shopping_cart_commodity_list_name"
                    android:text="商品名"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="其他"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_item_fragment_shopping_cart_commodity_list_standard"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_height="0dp" >
                <TextView
                    android:id="@+id/tv_item_fragment_shopping_cart_commodity_list_standard"
                    android:text="商品规格"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="其他"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_height="0dp" >
                <TextView
                    android:id="@+id/tv_item_fragment_shopping_cart_commodity_list_price"
                    android:text="￥35.15"
                    android:gravity="center|left"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="@dimen/dp_80"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="11dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_item_fragment_shopping_cart_commodity_list_number_reduce"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="match_parent"
                        android:background="@drawable/text_angle_gray"
                        android:gravity="center"
                        android:text="一"
                        android:textColor="@color/grey_color1"
                        android:textSize="@dimen/dp_14" />

                    <TextView
                        android:id="@+id/tv_item_fragment_shopping_cart_commodity_list_number"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="match_parent"
                        android:background="@drawable/text_angle"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="1"
                        android:textColor="@color/grey_color1"
                        android:textSize="@dimen/dp_14" />

                    <TextView
                        android:id="@+id/tv_item_fragment_shopping_cart_commodity_list_number_add"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="match_parent"
                        android:background="@drawable/text_angle_right"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/grey_color1"
                        android:textSize="@dimen/dp_14" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>