<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/state_list_drawable"
                android:hint="请点击输入获取焦点"
                android:textColor="@drawable/state_list_drawable_color" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/state_list_drawable"
                android:hint="请点击输入获取焦点"
                android:textColor="@drawable/state_list_drawable_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:max="100"
                android:progressDrawable="@drawable/layer_drawable" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/layer_drawable_logo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/shape_drawable_1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/shape_drawable_2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/shape_drawable_3" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20" />

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_400"
                android:background="@drawable/nvshengtouxiang" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20" />

            <ImageView
                android:id="@+id/iv_anim"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_400"
                android:background="@drawable/nvshengtouxiang" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20" />

            <Button
                android:id="@+id/btn_anim"
                android:text="anim"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20" />

            <LinearLayout
                android:id="@+id/ll_anim"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="vertical" />

            <EditText
                android:id="@+id/et_xml"
                android:hint="演示"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_menu"
                android:text="按钮"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <com.fpp.status.customview.AlphaImageView
                app:duration="5000"
                android:src="@drawable/nvshengtouxiang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:onClick="assets"
                android:text="播放音频（assets资源）"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40" />
            <Button
                android:onClick="raw"
                android:text="播放音频（raw资源）"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>