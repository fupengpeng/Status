<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_25">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_atvt_gesture_one_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#aaff00"
            android:scaleType="centerCrop"
            android:text="图片缩放"
            android:textSize="@dimen/dp_10" />

        <Button
            android:id="@+id/btn_atvt_gesture_one_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#ffffff"
            android:scaleType="centerCrop"
            android:text="android资源使用"
            android:textSize="@dimen/dp_10" />

        <Button
            android:id="@+id/btn_atvt_gesture_one_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#ffff00"
            android:scaleType="centerCrop"
            android:text="权限管理"
            android:textSize="@dimen/dp_10" />

        <Button
            android:id="@+id/btn_atvt_gesture_one_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#00ffff"
            android:scaleType="centerCrop"
            android:text="权限总结"
            android:textSize="@dimen/dp_10" />

        <Button
            android:id="@+id/btn_atvt_gesture_one_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#aa95ff"
            android:scaleType="centerCrop"
            android:text="数据处理"
            android:textSize="@dimen/dp_10" />

        <Button
            android:id="@+id/btn_atvt_gesture_one_six"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#ff00ff"
            android:scaleType="centerCrop"
            android:text="sd卡文件浏览器"
            android:textSize="@dimen/dp_10" />

        <Button
            android:id="@+id/btn_atvt_gesture_one_seven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#ffaaaa"
            android:scaleType="centerCrop"
            android:text="SQLite使用"
            android:textSize="@dimen/dp_10" />

        <Button
            android:id="@+id/btn_atvt_gesture_one_eight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#0055aa"
            android:scaleType="centerCrop"
            android:text="手势处理"
            android:textSize="@dimen/dp_10" />


    </LinearLayout>

</LinearLayout>