<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <Button
            android:id="@+id/btn_lv_item_op_item_remove"
            android:background="@drawable/task_item_delete"
            android:button="@null"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/tv_lv_item_op_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:textSize="@dimen/order_main_body_text_size"
            android:text="水疗"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_lv_item_op_item_number"
            android:layout_gravity="center"
            android:text="*5"
            android:textSize="@dimen/order_main_body_text_size"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_lv_item_op_item_price"
            android:textColor="#000000"
            android:text="￥100.00"
            android:textSize="@dimen/order_main_body_text_size"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>