<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--服务单详情标题栏-->
    <LinearLayout
        android:layout_marginTop="@dimen/dp_23"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#000000"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/iv_atvt_service_order_particulars_return"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_chevron_left_black_24dp"
            android:src="@drawable/shape_customer_view_progress_dialog"
            />

        <TextView
            android:id="@+id/tv_atvt_service_order_particulars_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="服务单详情"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/iv_atvt_service_order_particulars_cancel"
            android:src="@drawable/ic_more_horiz_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <!--内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <!--排序时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_atvt_service_order_particulars_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="@drawable/text_view_border"
                android:gravity="center"
                android:text="5" />

            <TextView
                android:id="@+id/tv_atvt_service_order_particulars_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text=" " />

            <TextView
                android:id="@+id/tv_atvt_service_order_particulars_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="时间" />
        </LinearLayout>
        <!--客户内容-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#eeeeee"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_atvt_service_order_particulars_user_pic"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center" />

            <LinearLayout
                android:padding="15dp"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_atvt_service_order_particulars_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:gravity="center|left"
                    android:text="散客" />

                <TextView
                    android:id="@+id/tv_atvt_service_order_particulars_user_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:gravity="center|left"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_atvt_service_order_particulars_turn_member"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_atvt_service_order_particulars_dial"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_khjd"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                     />

                <TextView
                    android:id="@+id/tv_atvt_service_order_particulars_dial"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="转为会员" />
            </LinearLayout>
        </LinearLayout>
        <!--间隔-->
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />
        <!--服务员和添加品项-->
        <LinearLayout
            android:orientation="vertical"
            android:background="#eeeeee"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:id="@+id/ll_atvt_service_order_particulars_show_service_item"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_atvt_service_order_particulars_waiter_user_pic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_account_circle_black_24dp" />

                <TextView
                    android:id="@+id/tv_atvt_service_order_particulars_waiter_user_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="一沉" />


                <TextView
                    android:id="@+id/tv_atvt_service_order_particulars_waiter_user_level"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center|left"
                    android:text="" />


                <CheckBox
                    android:id="@+id/cb_atvt_service_order_particulars_show_service_item"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_expand_less_black_24dp"
                    android:button="@null"
                    android:focusable="true" />

            </LinearLayout>
       <ListView
           android:id="@+id/lv_atvt_service_order_particulars_service_item"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

          />
            <!--<ListView
                android:id="@+id/lv_atvt_service_order_particulars_service_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                />-->
        </LinearLayout>

    </LinearLayout>
    <!--导航栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <!--添加品项-->
        <LinearLayout
            android:id="@+id/ll_atvt_service_order_particulars_add_service_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:src="@drawable/ic_add_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="添加品项" />
        </LinearLayout>
        <!--转单-->
        <LinearLayout
            android:id="@+id/ll_atvt_service_order_particulars_transfer_order"
            android:background="#ffffff"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="0.7"
                android:src="@drawable/ic_autorenew_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="转单" />
        </LinearLayout>
        <!--传单-->
        <LinearLayout
            android:id="@+id/ll_atvt_service_order_particulars_transmit_order"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="0.7"
                android:src="@drawable/ic_trending_flat_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="传单" />
        </LinearLayout>
        <!--结单-->
        <LinearLayout
            android:id="@+id/ll_atvt_service_order_particulars_finish_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="#ff0000"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:src="@drawable/ic_check_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="结单" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>