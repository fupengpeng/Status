<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/ll_lv_item_op_service_item_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <!--android:button="@null"-->
        <CheckBox
            android:id="@+id/cb_lv_item_op_service_item_remove"
            android:background="@drawable/ic_do_not_disturb_on_black_24dp"
            android:button="@null"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_45"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_lv_item_op_service_item_name"
            android:textColor="#000000"
            android:text="水疗"
            android:layout_weight="1"
            android:gravity="center|left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_lv_item_op_service_item_number"
            android:gravity="center"
            android:text="*5"
            android:layout_marginRight="@dimen/dp_45"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_lv_item_op_service_item_price"
            android:textColor="#000000"
            android:text="￥100.00"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>