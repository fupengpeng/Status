<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ImageTranslucentTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>

    <style name="ColorTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--checkbox-->
    <style name="circlecheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/order_item_select</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">@dimen/dp_25</item>
        <item name="android:height">25dp</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">12sp</item>
        <!--<item name="android:textSize">@dimen/text_16_sp</item>-->
    </style>


    <style name="ItemStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">45dp</item>
    </style>

    <!--  checkbox 样式-->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

</resources>
